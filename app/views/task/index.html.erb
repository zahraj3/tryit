<% if @task!=nil %>
	<div class="panel panel-default">
	  <div class="panel-heading">Actual task</div>
	  <div class="panel-body">
	    <%= render 'task/edit' %>
	  </div>
	</div>
<% end %>

<div class="panel panel-default">
  <div class="panel-heading">Create New Task</div>
  <div class="panel-body">
    <%= render 'task/new' %>
  </div>
</div>

<div class="panel panel-default">
  <div class="panel-heading">Tasks</div>
  <div class="panel-body">
    <%= render 'task/show' %>
  </div>
</div>